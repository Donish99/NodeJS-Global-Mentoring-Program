{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "lib": ["es2019"],
      "outDir": "./build",
      "rootDir": "./src",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    }
  }
  